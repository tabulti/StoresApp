<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    
    <ImageView
        android:id="@+id/complement_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/store_color_icon"/>

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/complement_image"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/store_id"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/store_name"
            android:textSize="16sp"
            android:layout_toEndOf="@id/complement_image"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:id="@+id/item_separator"
        android:layout_below="@id/item_layout"
        android:layout_alignStart="@id/item_layout"
        android:layout_marginTop="12dp"
        android:background="@color/grey_light"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>

</RelativeLayout>